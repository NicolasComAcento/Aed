#include <stdio.h>
#include <time.h>

int Separa(int p, int r, int v[]) {
  int c, j, k, t;
  c = v[r];
  j = p;
  for (k = p; k < r; k++) {
    if (v[k] <= c) {
      t = v[j], v[j] = v[k], v[k] = t;
      j++;
    }
  }
  v[r] = v[j], v[j] = c;
  return j;
}

void QuickSort(int p, int r, int v[]) {
  int j;
  if (p < r) {
    j = Separa(p, r, v);
    QuickSort(p, j - 1, v);
    QuickSort(j + 1, r, v);
  }
}

int main() {
  int v[200000];
  int i;
  clock_t Start, End;
  double tempo;

  // preencher o vetor com valores aleatÃ³rios
  for (i = 0; i < 200000; i++) {
    v[i] = rand() % 200000;
  }

  Start = clock();
  QuickSort(0, 199999, v);
  End = clock();

  // imprimir o vetor ordenado
  // for(i = 0; i < 200000; i++){
  //     printf("%d ", v[i]);
  // }

  tempo = ((double)(End - Start)) / CLOCKS_PER_SEC * 1000;
  printf("\nTempo de execucao: %.2f ms\n", tempo);

  return 0;
}

//Algoritmo do QuickSort retirado do livro "Algoritmos em Linguagem C" do autor Paulo Feofiloff
